<%= form_with(model: forum) do |form| %>
  <% if forum.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(forum.errors.count, "error") %> prohibited this forum from being saved:</h2>

      <ul>
        <% forum.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mt-3">
    <%= form.label :title, style: "display: block; margin-bottom: 5px;", :class => "text-md" %>
    <%= form.text_field :title, :class => "form-control text-md" %>
  </div>

  <div class="mt-3">
    <%= form.label :description, style: "display: block; margin-bottom: 5px;", :class => "text-md" %>
    <%= form.text_area :description, :class => "form-control text-md", :cols => 80, :rows => 10 %>
    <% text_area_tag :description, " ", :class => "tinymce", :id => "description" %>
  </div>

  <div class="mt-3">
    <%= form.label :tags, style: "display: block; margin-bottom: 5px;", :class => "text-md" %>
    <!-- %= form.text_field :tags, :class => "form-control text-md" %-->
    <%= form.select :tags, options_for_select(Forum.tags.keys.map { |c| [c.humanize, c] }), {}, class: 'form-select' %>
  </div>

  <div class="mt-4">
    <%= form.submit 'Send', :class => "btn btn-outline-dark text-md fw-bold ps-3 pe-3 w-auto rounded-pill" %>
  </div>
<% end %>
