<div class="container">
  <div class="row">
    <div class="col-lg-8 pt-4">
      <div class="p-3">
        <h2 class="font-bold">Editing question</h2>
        <%= render "form", forum: @forum %>
      </div>
    </div>
    <div class="col-lg-4 border-start pt-4">
      <div class="p-3">
        <div class="row">
          <div class="col-10">
            <%= link_to "See all", forums_path, :class => "btn btn-outline-dark text-md fw-bold ps-3 pe-3 rounded-pill w-100" %>
          </div>
          <div class="col-2 ps-0">
            <%= link_to forum_path(@forum), :class => "btn btn-outline-dark text-md fw-bold rounded-pill w-100" do %>
              <i class="bi bi-eye"></i>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
