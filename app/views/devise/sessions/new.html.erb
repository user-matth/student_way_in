<div class="container">
  <h2 class="font-bold mt-4">Sign in to continue with more security.</h2>
  <div class="d-flex justify-content-center flex-column align-items-center">

    <h3 class="text-center mt-5 font-semibold text-body-tertiary">Sign in to your Student WayIN </h3>

    <div class="container-xs mt-3">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <div class="input-group rounded-top mb-0">
            <%= f.email_field :email, autofocus: true, autocomplete: "off", :class => "form-control border border-bottom-0 border border-end-0", :style => "border-radius: 8px 8px 0 0", :placeholder => "Email" %>
          </div>
        </div>
        <div class="field">
          <div class="input-group rounded-top mb-0">
            <%= f.password_field :password, autocomplete: "off", :class => "form-control rounded-bottom", :style => "border-radius: 0 0 0px 8px!important" %>
            <span class="input-group-text bg-white border border-start-0", style="border-radius: 0 0px 8px 0", id="basic-addon2" >
              <%= button_tag( :class => "btn btn-white btn-sm p-0") do %>
                <i class="bi bi-arrow-right-circle"></i>
              <% end %>
            </span>
          </div>
        </div>

        <!-- div class="field">
          <%= f.password_field :password, autocomplete: "off", :class => "form-control rounded-bottom", :style => "border-radius: 0 0 8px 8px" %>
        </!-->

        <% if devise_mapping.rememberable? %>
          <div class="field text-center mt-3 mb-3">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

      <% end %>

      <% render "devise/shared/links" %>
    </div>

  </div>
</div>